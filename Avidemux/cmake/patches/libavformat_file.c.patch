+ 			if (oflag & O_EXCL)
+ 				creation = CREATE_NEW;
+ 			else if (oflag & O_TRUNC)
+ 				creation = CREATE_ALWAYS;
+ 			else
+ 				creation = OPEN_ALWAYS;
+ 		}
+ 		else if (oflag & O_TRUNC)
+ 			creation = TRUNCATE_EXISTING;
+ 	}
+ 	else if (oflag & O_RDONLY)
+ 		creation = OPEN_EXISTING;
+ 
