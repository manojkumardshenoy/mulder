+ 	int fileNameLength = utf8StringToWideChar(path, -1, NULL);
+ 	wchar_t wcFile[fileNameLength];
+ 	int creation = 0, access = 0;
+ 	HANDLE hFile;
+ 
+ 	utf8StringToWideChar(path, -1, wcFile);
+ 
+ 	if (oflag & O_WRONLY || oflag & O_RDWR)
+ 	{
